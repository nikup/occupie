@model LinkedFMI_UI.Models.Technology

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Ajax.BeginForm("AddTechnology", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "target",
                            OnSuccess = "closeTechDialog"
                        }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Технология</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            <br />
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proficiency)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Proficiency, new SelectList(LinkedFMI_UI.Utilities.GetProficiencies(), "Value", "Text"))
            @Html.ValidationMessageFor(model => model.Proficiency)
        </div>


        <p>
            <input type="submit" value="Add" />
            <input type="button" id="cancelAdd" value="Cancel" onclick="closeTechDialog()" />
        </p>
    </fieldset>
}

<script>
    function closeTechDialog() {
        $("#techDialog").dialog("close");
    }

    $("#Proficiency").kendoDropDownList();
</script>
