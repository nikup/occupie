@model LinkedFMI_UI.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<section id="loginForm">
    <div style="padding: 10px;">
        @using (Html.BeginForm("LoginAsEmployer", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <ol>
                <li>
                    @Html.TextBoxFor(m => m.UserName, new { @placeholder="company name" })
                    <br />
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li>
                    @Html.PasswordFor(m => m.Password, new { @placeholder="password" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </li>
            </ol>
            <input style="width:150px" class="k-button" type="submit" value="Влез" />
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
