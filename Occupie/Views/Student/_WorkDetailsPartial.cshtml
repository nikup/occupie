@model Occupie.Models.Student

@if (Model.WorkTimePreference != Occupie.Enums.WorkTime.not_specified || Model.WorkStatus != Occupie.Enums.WorkStatus.not_specified)
{
    <figure class="main">
        <figcaption>
            <img class="alignleft" src="~/img/mono-icons/clock32.png" />
            <h4 class="heading">Детайли</h4>
            @if (Model.WorkTimePreference != Occupie.Enums.WorkTime.not_specified)
            {
                <div class="display-field">
                    <span class="strong">Предпочитание за работно време:</span> 
                    @Occupie.Enums.EnumTranslator.WorkTimes[Model.WorkTimePreference]
                </div>
            }
            @if (Model.WorkStatus != Occupie.Enums.WorkStatus.not_specified)
            {
                <div class="display-field">
                    <span class="strong">Статус:</span> 
                    @Occupie.Enums.EnumTranslator.WorkStatuses[Model.WorkStatus]
                </div>
            }
        </figcaption>
    </figure>
}

