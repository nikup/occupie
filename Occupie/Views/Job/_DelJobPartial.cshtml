@model Int32[]


@using (Ajax.BeginForm("DeleteJob", new { jobId = Model[0] }, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "edit-exp",
                            OnSuccess = "closeDelJobDialog()"
                        }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <h5>Сигурни ли сте, че искате да изтриете тази работа?</h5>

        <p>
            <input type="submit" value="Да" />
            <input type="button" id="cancelDelJob" value="Не" onclick="closeDelJobDialog()" />
        </p>
}


<script>
    function closeDelJobDialog() {
        $(".ui-dialog:visible").find(".dialog").dialog("close");
    }
</script>
