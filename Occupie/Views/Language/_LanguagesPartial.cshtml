@model Occupie.Models.Student

@if (Model.Languages != null && Model.Languages.Count > 0)
{
    <figure class="personal">
        <figcaption>
            <img class="alignleft" src="~/img/mono-icons/commentblack32.png" />
            <h4 class="heading">Езици</h4>

            @foreach (var prof in Occupie.Enums.EnumTranslator.Proficiencies)
            {
                if (Model.Languages.Any(x => x.Proficiency == prof.Key))
                {
                    <fieldset>
                        <legend>@prof.Value ниво</legend>
                @foreach (var lang in Model.Languages)
                {
                    if (lang.Proficiency == prof.Key)
                    {
<h5>@lang.Name</h5>
                    }
                }
                        </fieldset>
                }
            }
        </figcaption>
    </figure>
}

