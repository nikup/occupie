@model Occupie.Models.LoginModel

@{
    ViewBag.Title = "Влез като работодател";
}

<div id="login-form">
    <h2>@ViewBag.Title</h2>
    <section id="loginForm">
        <div style="padding: 10px;">
            @using (Html.BeginForm("LoginAsEmployer", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <ol>
                    <li>
                        @Html.TextBoxFor(m => m.UserName, new { @placeholder = "потребителско име" })
                        <br />
                        @Html.ValidationMessageFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "парола" })
                        <br />
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ol>
                <input id="login-button" class="k-button" type="submit" value="Влез" />
            }
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
